<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name=".actionbar.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DETAILED_DATA activity -->
        <activity
            android:name=".browser.fragments.DetailedContentsActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- CHART_ACTIVITY activity -->
        <activity
            android:name=".browser.fragments.ChartActivity"
            android:label="@string/app_name" >
        </activity>
        
                <!-- CHART_ACTIVITY TEST activity -->
        <activity
            android:name=".browser.fragments.ChartActivityTest"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>