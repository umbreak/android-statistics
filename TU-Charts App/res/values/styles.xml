<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListItemContainerBase">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    <!-- a simple list item is one whose container and content are the same view -->

    <style name="SimpleListItem" parent="style/ListItemContainerBase">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DetailedListItem" parent="style/ListItemContainerBase">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>
    
    <style name="ActionButtonStyle" parent="Widget.Sherlock.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>             
</style>

</resources>